<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewCountRightAnswers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:text="@string/count_right_answers"
        tools:text="2 /"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textViewAnswersCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/answers_count"
        tools:text=" 2"
        app:layout_constraintStart_toEndOf="@id/textViewCountRightAnswers"
        app:layout_constraintTop_toTopOf="@id/textViewCountRightAnswers"
        app:layout_constraintBottom_toBottomOf="@id/textViewCountRightAnswers"/>

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:text="@string/timer"
        android:textColor="@android:color/holo_green_light"
        tools:text="00:16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textViewExpression"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        android:textColor="@color/black"
        tools:text="31 + 35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTimer"
        app:layout_constraintBottom_toTopOf="@id/textViewFirstVariant"/>

    <TextView
        android:id="@+id/textViewFirstVariant"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:text="13"
        android:background="@android:color/holo_blue_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textViewThirdVariant"
        app:layout_constraintEnd_toStartOf="@id/textViewSecondVariant"/>

    <TextView
        android:id="@+id/textViewSecondVariant"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:text="66"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintStart_toEndOf="@id/textViewFirstVariant"
        app:layout_constraintBottom_toTopOf="@id/textViewFourthVariant"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewThirdVariant"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:text="10"
        android:background="@android:color/holo_orange_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textViewFourthVariant"/>

    <TextView
        android:id="@+id/textViewFourthVariant"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:text="20"
        android:background="@color/purple_200"
        app:layout_constraintStart_toEndOf="@id/textViewThirdVariant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>